<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow layer -->
    <item
        android:top="2dp"
        android:left="2dp"
        android:right="2dp">
        <shape>
            <solid android:color="#1A000000"/>
            <corners android:radius="30dp"/>
        </shape>
    </item>

    <!-- Main search bar -->
    <item
        android:bottom="2dp">
        <shape>
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#FFFFFF"
                android:centerColor="#F0FAFF"
                android:endColor="#E3F4FF"/>

            <stroke
                android:width="1.5dp"
                android:color="#B3DBFF"/>

            <corners android:radius="30dp"/>
        </shape>
    </item>

</layer-list>