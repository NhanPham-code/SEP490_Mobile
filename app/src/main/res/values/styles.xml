<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Style for Stadium Detail Screen -->
    <style name="StadiumDetail" />

    <!-- Header Styles -->


    <style name="StadiumDetail.Title">

        <item name="android:textColor">#B10D0D</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="StadiumDetail.Location">
        <item name="android:textColor">@android:color/holo_green_dark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="drawableStartCompat">@drawable/outline_location_on_24</item>
    </style>

    <!-- Media Player Styles -->
    <style name="StadiumDetail.MediaNavButton">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:background">@drawable/rounded_transparent_dark_background</item>
        <item name="tint">@android:color/white</item>
    </style>

    <style name="StadiumDetail.VideoControlButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">8dp</item>
    </style>
    <style name="StadiumDetail.VideoControlButtonVolume">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">8dp</item>
        <item name="tint">@android:color/white</item>
    </style>

    <!-- Toggle Button Style -->
    <style name="StadiumDetail.Toggle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="cornerRadius">15dp</item>
        <item name="strokeColor">@color/grey_400</item>
        <item name="iconTint">@color/black</item>
    </style>

    <!-- Info Card Styles -->
    <style name="StadiumDetail.InfoCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">2dp</item>
    </style>
    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="MemberDetailRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="MemberDetailLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_600</item>
    </style>

    <style name="MemberDetailValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray_900</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>
    <style name="StadiumDetail.InfoCard.Content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="StadiumDetail.InfoCard.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="StadiumDetail.InfoCard.Value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="BookingDetailText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">@color/material_on_surface_emphasis_medium</item>
    </style>
    <style name="InputLabelStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="StandardInputStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="HelperTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textColor">?android:attr/textColorTertiary</item>
    </style>

    <style name="DiscountDetailLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/darker_gray</item> </style>

    <style name="DiscountDetailValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>
</resources>