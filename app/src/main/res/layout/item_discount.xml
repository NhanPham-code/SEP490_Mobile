<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginTop="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_discount_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_discount_stadium"
            app:tint="?attr/colorPrimary" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/tv_discount_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="BLACKFRIDAY25"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/deep_ocean"/>

            <TextView
                android:id="@+id/tv_discount_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Giảm 20% tối đa 50k"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tv_discount_expiry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="HSD: 30/11/2025"
                android:textSize="13sp"
                android:textStyle="italic"
                android:textColor="@color/error_red"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tv_applicable_stadiums"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Áp dụng tại: Sân ABC, Sân XYZ (+2 sân khác)"
                android:textSize="13sp"
                android:textStyle="italic"
                android:layout_marginTop="4dp"
                android:visibility="gone"
                tools:visibility="visible"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_copy_code"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_content_copy"
            app:tint="@color/ocean_blue"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Sao chép mã" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>