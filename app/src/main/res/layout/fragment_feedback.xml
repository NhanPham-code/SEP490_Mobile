<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.feedback.FeedbackFragment">

    <!-- Khu vực nhập liệu, sẽ được ẩn/hiện bằng code -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_add_feedback"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/add_feedback_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Để lại đánh giá của bạn"
                android:textAppearance="?attr/textAppearanceHeadline6" />

            <RatingBar
                android:id="@+id/rating_bar_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:isIndicator="false"
                android:numStars="5"
                android:progressTint="@color/star_yellow"
                android:progressTintMode="src_atop"
                android:secondaryProgressTint="@color/star_yellow"
                android:stepSize="1"
                android:thumbTint="@color/star_yellow" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Bình luận của bạn (không bắt buộc)">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Image Preview -->
            <ImageView
                android:id="@+id/image_preview"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:contentDescription="@string/feedback_image_description"
                tools:src="@tools:sample/backgrounds/scenic"
                tools:visibility="visible"/>

            <!-- Bọc các nút ảnh vào một LinearLayout để căn chỉnh -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_select_image"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chọn ảnh"
                    app:icon="@drawable/ic_add_photo" />

                <!-- NÚT XÓA ẢNH -->
                <Button
                    android:id="@+id/button_remove_image"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Xóa ảnh"
                    android:textColor="?attr/colorError"
                    android:visibility="gone"
                    app:icon="@drawable/ic_delete"
                    app:iconTint="?attr/colorError"
                    tools:visibility="visible"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_submit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Gửi đánh giá" />

                <Space
                    android:id="@+id/delete_button_space"
                    android:layout_width="8dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/button_delete_my_feedback"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Xóa"
                    android:textColor="?attr/colorError"
                    android:visibility="gone"
                    app:strokeColor="?attr/colorError" />

            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- RecyclerView để hiển thị danh sách feedback -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_feedbacks"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:nestedScrollingEnabled="false"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_add_feedback"
        tools:itemCount="3"
        tools:listitem="@layout/item_feedback" />

    <ProgressBar
        android:id="@+id/feedback_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/recycler_view_feedbacks"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/recycler_view_feedbacks"
        tools:visibility="visible" />

    <!-- Các nút điều khiển phân trang -->
    <LinearLayout
        android:id="@+id/pagination_controls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recycler_view_feedbacks"
        tools:visibility="visible">

        <Button
            android:id="@+id/button_prev_page"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trước"
            app:icon="@drawable/ic_chevron_left" />

        <LinearLayout
            android:id="@+id/pages_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal" />

        <Button
            android:id="@+id/button_next_page"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sau"
            app:icon="@drawable/ic_chevron_right"
            app:iconGravity="end" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>