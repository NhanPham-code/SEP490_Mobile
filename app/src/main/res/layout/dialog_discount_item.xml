<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dialog_discount_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:text="KM_SANMOI"/>

        <TextView
            android:id="@+id/tv_dialog_discount_percent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textColor="@color/ocean_blue"
            android:textStyle="bold"
            android:textSize="16sp"
            tools:text="(Giảm 20%)"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_dialog_discount_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/grey_700"
        android:textSize="14sp"
        tools:text="Áp dụng cho lần đầu đặt sân tại đây."
        android:visibility="gone"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/tv_dialog_discount_conditions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/gray_600"
        android:textSize="13sp"
        tools:text="Giảm tối đa: 100.000 đ - Đơn tối thiểu: 50.000 đ"
        android:visibility="gone"
        tools:visibility="visible"/>

</LinearLayout>