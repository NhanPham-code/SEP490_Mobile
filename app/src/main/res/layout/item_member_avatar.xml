<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:id="@+id/memberCardContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:backgroundTint="@color/grey_400"
            android:background="@drawable/rounded_transparent_dark_background_avatar"
            android:gravity="top"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/memberAvatar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_background"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
                    tools:src="@tools:sample/avatars"
                    android:layout_marginEnd="12dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvFullName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/gray_900"
                        tools:text="Nguyễn Văn A" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutActionButtons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginStart="16dp">

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <LinearLayout style="@style/MemberDetailRow">
                <TextView style="@style/MemberDetailLabel" android:text="Vai Trò:" />

                <LinearLayout
                    android:id="@+id/layoutRoleBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="12dp"
                    android:layout_marginStart="5dp"
                    android:paddingVertical="4dp"
                    android:background="@drawable/bg_role_badge"
                    tools:backgroundTint="#FFE5E5">

                    <TextView
                        android:id="@+id/tvRoleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:textColor="@color/error_red"
                        tools:text="Trưởng Nhóm" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout style="@style/MemberDetailRow" android:layout_marginTop="8dp">
                <TextView style="@style/MemberDetailLabel" android:text="Tham Gia:" />
                <TextView
                    android:id="@+id/tvJoinedAt"
                    style="@style/MemberDetailValue"
                    tools:text="20/10/2025" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutBottomActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:visibility="gone"
            tools:visibility="visible">


            <Button
                android:id="@+id/btnRemove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/green_500"
                app:cornerRadius="24dp"
                android:layout_marginEnd="5dp"
                android:textSize="10dp"
                android:text="Tham gia" />

            <Button
                android:id="@+id/btnAccept"
                app:cornerRadius="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:backgroundTint="@color/green_500"
                android:textSize="10dp"
                android:text="Tham gia" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>