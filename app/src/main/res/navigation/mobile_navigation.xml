<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.sep490_mobile.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_visuallyBookingFragment"
            app:destination="@id/visuallyBookingFragment" />
        <action
            android:id="@+id/action_navigation_home_to_stadiumDetailFragment"
            app:destination="@id/stadiumDetailFragment" />
        <action
            android:id="@+id/action_navigation_home_to_monthlyBookingFragment"
            app:destination="@id/monthlyBookingFragment" />
        <action
            android:id="@+id/action_navigation_home_to_dailyBookingFragment"
            app:destination="@id/dailyBookingFragment" />
    </fragment>

    <fragment
        android:id="@+id/monthlyBookingFragment"
        android:name="com.example.sep490_mobile.ui.booking.MonthlyBookingFragment"
        android:label="Đặt sân theo tháng"
        tools:layout="@layout/fragment_monthly_booking" >
        <action
            android:id="@+id/action_monthlyBookingFragment_to_monthlyCheckoutFragment"
            app:destination="@id/monthlyCheckoutFragment" />
        <argument
            android:name="stadiumId"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/visuallyBookingFragment"
        android:name="com.example.sep490_mobile.ui.booking.VisuallyBookingFragment"
        android:label="VisuallyBookingFragment"
        tools:layout="@layout/fragment_visually_booking" >
        <action
            android:id="@+id/action_visuallyBookingFragment_to_checkoutFragment"
            app:destination="@id/checkoutFragment" />
        <argument
            android:name="stadiumId"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/stadiumDetailFragment"
        android:name="com.example.sep490_mobile.ui.stadiumDetail.StadiumDetailFragment"
        android:label="Stadium Detail">
        <argument
            android:name="stadiumId"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/checkoutFragment"
        android:name="com.example.sep490_mobile.ui.booking.CheckoutFragment"
        android:label="CheckoutFragment"
        tools:layout="@layout/fragment_checkout">
        <argument
            android:name="stadiumId"
            app:argType="integer" />
        <argument
            android:name="date"
            app:argType="string" />
        <argument
            android:name="totalPrice"
            app:argType="float" />
        <argument
            android:name="selectedCourts"
            app:argType="com.example.sep490_mobile.data.dto.SelectedCourtInfo[]" />
    </fragment>
    <fragment
        android:id="@+id/navigation_map"
        android:name="com.example.sep490_mobile.ui.map.MapFragment"
        android:label="@string/map"
        tools:layout="@layout/fragment_map" />

    <fragment
        android:id="@+id/monthlyCheckoutFragment"
        android:name="com.example.sep490_mobile.ui.booking.MonthlyCheckoutFragment"
        android:label="CheckoutFragment"
        tools:layout="@layout/monthly_fragment_checkout">
        <argument
            android:name="stadiumId"
            app:argType="integer" />
        <argument
            android:name="STADIUM_NAME"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null"/>
        <argument
            android:name="COURT_NAMES"
            app:argType="string[]"
            app:nullable="true"
            android:defaultValue="@null"/>
        <argument
            android:name="START_TIME"
            app:argType="integer"
            android:defaultValue="0"/>
        <argument
            android:name="END_TIME"
            app:argType="integer"
            android:defaultValue="0"/>
        <argument
            android:name="YEAR"
            app:argType="integer"
            android:defaultValue="0"/>
        <argument
            android:name="MONTH"
            app:argType="integer"
            android:defaultValue="0"/>
        <argument
            android:name="BOOKABLE_DATES"
            app:argType="string[]"
            app:nullable="true"
            android:defaultValue="@null"/>
        <argument
            android:name="COURT_IDS"
            app:argType="integer[]"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="TOTAL_PRICE"
            app:argType="float"
            android:defaultValue="0.0" />
    </fragment>

    <fragment
        android:id="@+id/navigation_find_team"
        android:name="com.example.sep490_mobile.ui.findTeam.FindTeamFragment"
        android:label="@string/find_team"
        tools:layout="@layout/fragment_find_team" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.sep490_mobile.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/navigation_account"
        android:name="com.example.sep490_mobile.ui.account.AccountFragment"
        android:label="@string/account"
        tools:layout="@layout/fragment_account">
        <action
            android:id="@+id/action_navigation_account_to_navigation_schedule"
            app:destination="@id/navigation_schedule" />
        <action
            android:id="@+id/action_navigation_account_to_bookingHistoryFragment"
            app:destination="@id/bookingHistoryFragment" />
    </fragment>
    <fragment
        android:id="@+id/bookingHistoryDetailFragment"
        android:name="com.example.sep490_mobile.ui.bookingdetail.BookingHistoryDetailFragment"
        android:label="Chi tiết Lịch đặt"
        tools:layout="@layout/fragment_booking_history_detail">
        <argument
            android:name="bookingItem"
            app:argType="com.example.sep490_mobile.data.dto.booking.IBookingHistoryItem" />
    </fragment>

    <action
        android:id="@+id/action_bookingHistoryFragment_to_bookingHistoryDetailFragment"
        app:destination="@id/bookingHistoryDetailFragment" />

    <fragment
        android:id="@+id/discountListFragment"
        android:name="com.example.sep490_mobile.ui.discount.DiscountListFragment"
        android:label="Mã giảm giá"
        tools:layout="@layout/fragment_discount_list" >
        <action
            android:id="@+id/action_discountListFragment_to_discountDetailFragment"
            app:destination="@id/discountDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/discountDetailFragment"
        android:name="com.example.sep490_mobile.ui.discount.DiscountDetailFragment"
        android:label="Chi tiết Mã giảm giá"
        tools:layout="@layout/fragment_discount_detail">
        <argument
            android:name="discount"
            app:argType="com.example.sep490_mobile.data.dto.discount.ReadDiscountDTO" />
    </fragment>
    <action
        android:id="@+id/action_navigation_account_to_discountListFragment"
        app:destination="@id/discountListFragment" />
    <!-- ĐÃ THÊM: Khai báo ChatListActivity là một đích đến -->
    <activity
        android:id="@+id/navigation_chat"
        android:name="com.example.sep490_mobile.ChatListActivity"
        android:label="Tin nhắn"
        tools:layout="@layout/activity_main2" />

    <fragment
        android:id="@+id/navigation_schedule"
        android:name="com.example.sep490_mobile.ui.schedule.ScheduleFragment"
        android:label="Lịch"
        tools:layout="@layout/fragment_schedule">
        <action
            android:id="@+id/action_navigation_schedule_to_bookingDetailFragment"
            app:destination="@id/bookingDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/bookingDetailFragment"
        android:name="com.example.sep490_mobile.ui.scheduledetail.BookingDetailFragment"
        android:label="Booking Detail">
        <argument
            android:name="booking"
            app:argType="com.example.sep490_mobile.data.dto.ScheduleBookingDTO" />
    </fragment>

    <fragment
        android:id="@+id/bookingHistoryFragment"
    android:name="com.example.sep490_mobile.ui.bookinghistory.BookingHistoryFragment"
    android:label="fragment_booking_history"
    tools:layout="@layout/fragment_booking_history" />

    <fragment
        android:id="@+id/dailyBookingFragment"
        android:name="com.example.sep490_mobile.ui.booking.DailyBookingFragment"
        android:label="Đặt sân theo danh sách"
        tools:layout="@layout/fragment_daily_booking">
        <argument
            android:name="stadiumId"
            app:argType="integer" />
        <action
            android:id="@+id/action_dailyBookingFragment_to_checkoutTimeZoneFragment"
            app:destination="@id/checkoutTimeZoneFragment" />
    </fragment>

    <fragment
        android:id="@+id/checkoutTimeZoneFragment"
        android:name="com.example.sep490_mobile.ui.booking.CheckoutTimeZoneFragment"
        android:label="Thông Tin Đặt Sân"
        tools:layout="@layout/fragment_checkout_time_zone"> <argument
        android:name="stadiumId"
        app:argType="integer" />
        <argument
            android:name="stadiumName"
            app:argType="string" />
        <argument
            android:name="courtIds"
            app:argType="integer[]" />
        <argument
            android:name="courtNames"
            app:argType="string[]" />
        <argument
            android:name="date"
            app:argType="string" />
        <argument
            android:name="startTime"
            app:argType="integer" />
        <argument
            android:name="endTime"
            app:argType="integer" />
        <argument
            android:name="totalPrice"
            app:argType="float" />
    </fragment>
</navigation>
